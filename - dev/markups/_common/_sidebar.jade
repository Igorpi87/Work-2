.sidebar
	.categories
		ul.categories__list
			li.categories__item
				a(href="#").categories__link Флагманы
			li.categories__item.categories__item_active
				a(href="#").categories__link Бюджетная линейка
	.filter
		ul.filter__list
			li.filter__item
				.filter__title
					a(href="#").filter__title-link Наличие в магазинах
				.filter__content
					ul.filter__choose
						- var items = ["Во всех магазинах", "В ближайшем ко мне магазине"]
						each item in items
							li.filter__choose-item
								label.filter__choose-label
									input(name="location" type="radio").filter__choose-input
									.filter__choose-elem
									.filter__choose-text= item
			li.filter__item
				.filter__title
					a(href="#").filter__title-link Бренды
				.filter__content
					ul.filter__choose.filter__choose_checkbox
						- var items = ["Lenovo", "Apple", "Samsung", "Asus", "Motorola"]
						each item in items
							li.filter__choose-item
								label.filter__choose-label
									input(name="location" type="radio").filter__choose-input
									.filter__choose-elem
									.filter__choose-text= item
					.filter__reset-wrap
						a(href="#").filter__reset Сбросить фильтр
			li.filter__item
				.filter__title
					a(href="#").filter__title-link Цена
				.filter__content
					.filter__slider
						.filter__slider_displays
							.filter__slider-left
								.filter__slider-text от
								input(name="" type="text" placeholder="").filter__slider-input.filter__slider-input_from
							.filter__slider-right
								.filter__slider-text до
								input(name="" type="text" placeholder="").filter__slider-input.filter__slider-input_to
						div(class="filter__slider-element" data-min="0" data-max="30000")
			li.filter__item
				.filter__title
					a(href="#").filter__title-link Цвет
				.filter__content
					ul.filter__colors
						- var colors = ['ffffff','cccccc','000000','0a3153','ff1800','fff343','fb914a','92c37c','40a6ff','9870ad','dc78ad','7f401d']
						each color in colors
							li.filter__colors-item
								a(href="#" style="background-color: #" +color).filter__color-link
					.filter__reset-wrap
						a(href="#").filter__reset Сбросить фильтр				
			li.filter__item
				.filter__title
					a(href="#").filter__title-link Операционная система
				.filter__content
					ul.filter__choose.filter__choose_checkbox
						- var items = ["Android", "IOs", "Symbian", "Windows Mobile", "Custom"]
						each item in items
							li.filter__choose-item
								label.filter__choose-label
									input(name="location" type="radio").filter__choose-input
									.filter__choose-elem
									.filter__choose-text= item
					.filter__reset-wrap
						a(href="#").filter__reset Сбросить фильтр